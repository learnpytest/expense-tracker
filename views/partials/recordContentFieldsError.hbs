{{!-- 驗證失敗將錯誤項目提示使用者 --}}
{{#if alertMessage}}
<div class="alert alert-warning alert-dismissible fade show"
     role="alert">
  <strong>Hello {{firstName}}!</strong> You should check in on some of those fields below.
  <ul>
    {{#each alertMessage}}
    <li>{{this.param}}: {{this.msg}}</li>
    {{/each}}
  </ul>
  <button type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}
